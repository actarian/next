{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "outDir": ".build",
    "baseUrl": ".",
    "paths": {
      "@core/*": ["src/@core/*"],
      "@models/*": ["src/@models/*"],
    }
  },
  "files": [
    "src/@core/mock/mock.build.ts",
  ],
  "exclude": [
    "node_modules",
    "data/**/*.ts"
  ]
}
